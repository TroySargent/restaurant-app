<div class="available">
<h1>Available To Order</h1>
{{#each burgers}}
{{#unless this.devoured}}
<div class="burger">
<h2>{{this.burgerName}}</h2> 
<button name="devourBtn" data-id="{{this.id}}">Devour</button>
</div>
{{/unless}}
{{/each}}
</div>

<div class="unavailable">
<h1>Out Of Stock</h1>
<div class="faded">
{{#each burgers}}
{{#if this.devoured}}
<input readonly value="{{this.burgerName}}"></input>
{{/if}}
{{/each}}
</div>
</div>